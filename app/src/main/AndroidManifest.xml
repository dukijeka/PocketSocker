<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="rs.ac.bg.etf.rti.md150625d.dushan.pocketsocker">

    <application
            android:allowBackup="true"
            android:icon="@drawable/soccer_ball"
            android:label="@string/app_name"
            android:roundIcon="@drawable/soccer_ball"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".ui.SettingsActivity">
        </activity>
        <activity android:name=".ui.ResultsActivity">
        </activity>
        <activity
                android:name=".ui.TeamSelectActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".ui.GameActivity"
                android:label="@string/title_activity_game"
                android:screenOrientation="sensorLandscape"
                android:theme="@style/NoActionBar">
        </activity>
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>