<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.StatisticsActivity"
        android:background="@drawable/football_field_background"
        android:orientation="vertical">

    <TextView
            android:text="Statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:textAlignment="center"
            android:textSize="36sp" android:fontFamily="@font/frijole"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/statisticsListView"/>
</LinearLayout>