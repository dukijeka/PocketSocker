<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="rs.ac.bg.etf.rti.md150625d.dushan.pocketsocker.ui.ResultsActivity"
        android:background="@drawable/football_field_background"
        android:orientation="vertical">

    <TextView
            android:text="RESULT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/resultsTextView" android:textSize="36sp"
            android:fontFamily="@font/frijole"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="612dp" android:id="@+id/listView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/resultsTextView"/>
</LinearLayout>
